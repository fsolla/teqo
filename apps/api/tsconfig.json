{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "module": "CommonJS",
        "target": "ES2020",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": "."
    },
    "include": ["src", "./*.d.ts"],
    "exclude": ["node_modules", "dist"]
}
  